###############################################################################
# TOMCAT CHECK COMMANDS
# Generated by Ansible
# Uses ONLY real Nagios plugins - NO custom scripts
###############################################################################

# Command 1: Check Tomcat HTTP Response
# Uses REAL Nagios check_http plugin
define command {
    command_name    check_tomcat_http
    command_line    {{ nagios_core_plugins }}/check_http -H 127.0.0.1 -p {{ tomcat_port }}
}

# Command 2: Check Tomcat TCP Port
# Uses REAL Nagios check_tcp plugin
define command {
    command_name    check_tomcat_tcp
    command_line    {{ nagios_core_plugins }}/check_tcp -H 127.0.0.1 -p {{ tomcat_port }}
}

# Command 3: Check PetClinic Application
# Uses REAL Nagios check_http plugin
define command {
    command_name    check_petclinic
    command_line    {{ nagios_core_plugins }}/check_http -H 127.0.0.1 -p {{ tomcat_port }} -u /petclinic/ -s "Welcome"
}

# Command 4: Check Tomcat Manager
# Uses REAL Nagios check_http plugin with authentication
define command {
    command_name    check_tomcat_manager
    command_line    {{ nagios_core_plugins }}/check_http -H 127.0.0.1 -p {{ tomcat_port }} -u /manager/html -a {{ tomcat_manager_user }}:{{ tomcat_manager_password }} -e 200
}
