#!/bin/bash
# Simple monitoring script

LOG_FILE={{ nagios_home }}/var/nagios.log

echo "=== Monitoring Started at $(date) ===" >> $LOG_FILE

# Check Tomcat
echo "Checking Tomcat..." >> $LOG_FILE
{{ nagios_home }}/bin/check_tomcat.sh >> $LOG_FILE 2>&1

echo "=== Monitoring Completed at $(date) ===" >> $LOG_FILE
echo "" >> $LOG_FILE
